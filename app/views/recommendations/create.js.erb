document.addEventListener('turbolinks:load', function() {
let recommendBtn = document.getElementById('recommend-button-<%= @story.id %>');
let recommendationsList = document.getElementById('recommendations-list-<%= @story.id %>');

if (recommendBtn) {
  let newBtnHTML = '<%= j button_to "Remove from Recommendations",
      story_recommendation_path(story_id: @story.id, id: @recommend.id),
      method: :delete,
      remote: true,
      class: "recommend",
      id: "remove-recommend-button-#{@story.story_id}" %>';
  recommendBtn.outerHTML = newBtnHTML;
}

if (recommendationsList) {
  let newRecommendation = document.createElement('li');
  newRecommendation.innerHTML = '<%= j(@recommend.user.first_name + " " + @recommend.user.last_name) %>';
  recommendationsList.appendChild(newRecommendation);
}
});